# WARP std

# NC Coding style & general guidelines
# https://docs.nextcloud.com/server/latest/developer_manual/getting_started/codingguidelines.html
# tabs?, fine, keep them for PHP files

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Align with Nextcloud
[*.php]
indent_style = tab
indent_size = 4

[*.{js,mjs,cjs,ts,mts,cts,jsx,tsx}]
indent_style = space
indent_size = 2

[*.vue]
indent_style = space
indent_size = 2

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.{json,jsonc,yml,yaml}]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.{glsl,frag,vert}]
indent_style = space
indent_size = 2

[*.{html,ejs}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.applescript]
indent_style = tab
indent_size = 2

# align with django
[*.py]
max_line_length = 119
indent_style = space
indent_size = 4

[*.feature]
indent_size = 2
indent_style = space

[*.svg]
insert_final_newline = false
